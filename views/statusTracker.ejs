<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Your Query</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>

  <style>
    body {
      background: #0f1117;
      font-family: 'Segoe UI', sans-serif;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      padding: 40px 20px;
    }

    .neon-box {
      background: #1a1d2b;
      border: 1px solid #2c2f3e;
      border-radius: 16px;
      padding: 30px;
      box-shadow: 0 0 15px #00f2ff33;
      max-width: 700px;
      width: 100%;
      margin-top: 30px;
    }

    .neon-box h2 {
      color: #00f2ff;
      font-weight: bold;
      border-bottom: 1px solid #2c2f3e;
      padding-bottom: 15px;
      margin-bottom: 25px;
    }

    label {
      font-weight: 600;
      color: #7de2fc;
    }

    .form-control {
      background: #15171f;
      border: 1px solid #2c2f3e;
      color: #e0e0e0;
      border-radius: 10px;
    }

    .form-control:focus {
      border-color: #00f2ff;
      box-shadow: 0 0 8px #00f2ff66;
      background-color: #1d202a;
      color: #fff;
    }

    .btn-neon {
      background: linear-gradient(90deg, #00f2ff, #00d1ff);
      border: none;
      color: #000;
      font-weight: bold;
      border-radius: 10px;
      padding: 10px 20px;
      transition: 0.3s ease;
      box-shadow: 0 0 10px #00f2ff55;
    }

    .btn-neon:hover {
      box-shadow: 0 0 15px #00f2ffaa;
    }

    .info-box {
      background: #111319;
      border-left: 4px solid #00f2ff;
      padding: 15px 20px;
      margin-bottom: 15px;
      border-radius: 8px;
    }

    .info-title {
      color: #7de2fc;
      font-weight: bold;
    }

    .info-value {
      color: #e0f7ff;
    }

    .input-group {
      max-width: 500px;
      margin: 20px auto;
    }
  </style>
</head>
<body>

  <h1 class="text-center text-info mb-4">üîç View Your Query</h1>

  <!-- Input Form to Enter Query Key -->
  <form class="input-group mb-5" method="GET" action="/viewQuery">
    <input type="text" name="queryKey" class="form-control" placeholder="Enter your unique Query ID" required>
    <button class="btn btn-neon" type="submit">View</button>
  </form>

  <% if (typeof query !== 'undefined' && query) { %>
    <!-- Display the Query Details -->
    <div class="neon-box">
      <h2>Query Details</h2>

      <div class="info-box">
        <div class="info-title">üîπ User Query:</div>
        <div class="info-value"><%= query?query.userquery:'' %></div>
      </div>

      <div class="info-box">
        <div class="info-title">ü§ñ AI Response:</div>
        <div class="info-value"><%= query?query.airesponse:'' %></div>
      </div>

      <div class="info-box">
        <div class="info-title">üìä Verification Status:</div>
        <div class="info-value"><%= query?query.doctorverified:'' %></div>
      </div>
      <div class="info-box">
        <div class="info-title">üßë‚Äç‚öïÔ∏è Doctor Comments:</div>
        <div class="info-value"><%= query?query.doctorresponse:'' %></div>
      </div>
    </div>
    </div>
  <% } else if (typeof queryNotFound !== undefined) { %>
    <!-- No Query Found -->
    <div class="alert alert-warning text-center w-75 mt-4">
      ‚ùå No query found with the provided ID.
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Optional: Add any JavaScript functionality if needed
    // query_viewer.js

document.addEventListener("DOMContentLoaded", () => {
  const queryInput = document.querySelector('input[name="queryKey"]');

  // Auto-focus input on page load
  if (queryInput) {
    queryInput.focus();
  }

  // Optional: Submit form on Enter key
  queryInput.addEventListener("keydown", function (e) {
    if (e.key === "Enter") {
      this.form.submit();
    }
  });

  // Optional: Show success or error animation (if needed)
  const neonBox = document.querySelector('.neon-box');
  if (neonBox) {
    neonBox.classList.add('glow-fade-in');
  }
});
  </script>
  <style>
    .glow-fade-in {
      animation: glowFadeIn 0.5s ease-in-out forwards;
    }

    @keyframes glowFadeIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</body>
</html>
