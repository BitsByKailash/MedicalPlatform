<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Doctor and Patient Cards</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="./Style_role.css" />
</head>

<body class="d-flex justify-content-center align-items-center vh-100 bg-light">

  <div class="container">
    <div class="row justify-content-center">
      <!-- Doctor Card -->
      <div class="col-md-5 col-sm-12 mb-3">
        <div class="card shadow-sm">
            <div class="card-img-top bg-primary text-white d-flex justify-content-center align-items-center" style="height: 200px;">
                <h5>Doctor</h5>
              </div>              
          <div class="card-body text-center">
            <h5 class="card-title">Doctor Portal</h5>
            <p class="card-text">Manage your querries, view patient requests, and collaborate with other healthcare professionals.</p>
            <a href="#" id="doctor_button" class="btn btn-primary">Go to Doctor Page </a>
          </div>
        </div>
      </div>

      <!-- Patient Card -->
      <div class="col-md-5 col-sm-12 mb-3">
        <div class="card shadow-sm">
            <div class="card-img-top bg-success text-white d-flex justify-content-center align-items-center" style="height: 200px;">
                <h5>Patient</h5>
              </div>
          <div class="card-body text-center">
            <h5 class="card-title">Patient Portal</h5>
            <p class="card-text">Access your doubts, book appointments, and consult with healthcare professionals online.</p>
            <a href="#" id="patient_button" class="btn btn-success">Go to Patient Page </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="./role.js"></script>
</body>

</html>