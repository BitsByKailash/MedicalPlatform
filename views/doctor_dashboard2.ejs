    .ai-card {
  position: relative;
  border: 2px solid transparent;
  border-radius: 10px; /* Match with .card */
  padding: 1rem;       /* Match with .card */
  background: inherit; /* Use the same background as default card */
  box-shadow: inherit; /* Use same shadow as default card */
  overflow: hidden;
  transition: all 0.3s ease;
  color: inherit;      /* Inherit default text color */
}

/* Glowing rotating border */
.ai-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(from 0deg, #00f2fe, #4facfe, #00c6ff, #00f2fe);
  animation: rotate 5s linear infinite;
  z-index: 0;
  opacity: 0.5;
  filter: blur(8px);
}

.ai-card::after {
  content: '';
  position: absolute;
  inset: 2px;
  background: inherit;
  border-radius: 8px;
  z-index: 1;
}

/* Ensure text and content appear on top */
.ai-card * {
  position: relative;
  z-index: 2;
}

