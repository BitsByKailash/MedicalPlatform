  <style>
    body {
      background-color: #0f1117;
      color: #e0e0e0;
      font-family: 'Segoe UI', sans-serif;
    }

    .Heading {
      font-size: 2.2rem;
      margin-bottom: 1.5rem;
      text-align: center;
      color: #00f2ff;
      font-weight: bold;
    }

    .navbar {
      background-color: #1a1d2b !important;
      box-shadow: 0 0 10px #00f2ff33;
    }

    .navbar-brand,
    .nav-link {
      color: #7de2fc !important;
    }

    .nav-link:hover,
    .nav-link.active {
      color: #00f2ff !important;
      background-color: #232637;
      border-radius: 6px;
    }

    .container {
      margin-top: 90px;
      margin-bottom: 40px;
    }

    .card {
      background: rgba(20, 25, 34, 0.6);
      border: 1px solid rgba(0, 242, 255, 0.2);
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px #00f2ff22;
      border-radius: 15px;
      margin-bottom: 25px;
      transition: transform 0.2s, box-shadow 0.3s;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 30px #00f2ffaa;
    }

    .card-body {
      padding: 1.5rem;
    }

    .card h5 {
      color: #00f2ff;
    }

    .card .userquerries {
      font-weight: bold;
      font-size: 1rem;
      color: #7de2fc;
    }

    .card p {
      color: #ccc;
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .form-control {
      background-color: rgba(29, 32, 42, 0.9);
      color: #e0e0e0;
      border: 1px solid #2c2f3e;
      border-radius: 10px;
      font-size: 0.95rem;
    }

    .form-control:focus {
      background-color: #232633;
      border-color: #00f2ff;
      box-shadow: 0 0 8px #00f2ff66;
    }

    .submitDoctorQueryButton {
      background: linear-gradient(90deg, #00f2ff, #00d1ff);
      border: none;
      font-weight: bold;
      border-radius: 10px;
      padding: 8px 16px;
      box-shadow: 0 0 10px #00f2ff55;
      color: #000;
    }

    .submitDoctorQueryButton:hover {
      box-shadow: 0 0 15px #00f2ffaa;
    }

    textarea.DoctorSaid {
      min-height: 130px;
      resize: vertical;
    }
  </style>
</head>
<body class="dark-mode">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark">
    <div class="container-fluid">
