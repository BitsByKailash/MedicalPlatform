        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <h2 class="Heading">Doctor Query Addressal Panel</h2>

    <% queries.forEach(query => { %>
      <div class="card">
        <div class="card-body">
          <h5 class="userquerries"><%= query.user %></h5>
          <p><strong>Query:</strong> <%= query.userquery %></p>
          <p><strong>AI Response:</strong> <%= query.airesponse %></p>
          <div class="mb-3">
            <label for="doctorAnswer" class="form-label"><strong>Your Answer:</strong></label>
            <textarea class="form-control DoctorSaid" placeholder="Enter your response here..."></textarea>
          </div>
          <button class="btn submitDoctorQueryButton">Submit</button>
        </div>
      </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="./queryAddressal.js"></script>
