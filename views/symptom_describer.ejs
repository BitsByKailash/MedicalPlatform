      position: relative;
      height: 100vh;
    }
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.6;
      animation: float 10s infinite ease-in-out;
      mix-blend-mode: screen;
    }

    .blob:nth-child(1) {
      width: 400px;
      height: 400px;
      background: #e4c165;
      top: 10%;
      left: 5%;
      animation-delay: 0s;
    }

    .blob:nth-child(2) {
      width: 350px;
      height: 350px;
      background: #ffd26f;
      top: 40%;
      left: 70%;
      animation-delay: 5s;
    }

    .blob:nth-child(3) {
      width: 450px;
      height: 450px;
      background: #ffe7a0;
      top: 70%;
      left: 30%;
      animation-delay: 10s;
    }
    .navbar {
      background-color: #000000cc !important;
      backdrop-filter: blur(8px);
      border-bottom: 1px solid #00ffc8;
    }

    #voiceTextarea {
      width: 100%;
      height: 150px;
      resize: none;
      padding: 12px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      background-color: #0f0f0f;
      color: #00ffc8;
      box-shadow: 0 0 15px rgba(0, 255, 200, 0.5);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { box-shadow: 0 0 15px rgba(0, 255, 200, 0.4); }
      50% { box-shadow: 0 0 25px rgba(0, 255, 200, 0.9); }
      100% { box-shadow: 0 0 15px rgba(0, 255, 200, 0.4); }
    }

    .btn-primary, .btn-secondary {
      border-radius: 8px;
      padding: 12px 20px;
      font-weight: bold;
      border: none;
      color: #000;
      background: linear-gradient(135deg, #00ffc8, #007cf0);
      box-shadow: 0 0 15px rgba(0, 255, 200, 0.6);
      transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover, .btn-secondary:hover {
      transform: scale(1.05);
      box-shadow: 0 0 25px rgba(0, 255, 200, 0.9);
    }

    .card-symptom {
